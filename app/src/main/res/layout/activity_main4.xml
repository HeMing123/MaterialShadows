<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_230"
    android:orientation="horizontal">


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_24"
            android:background="@drawable/bg_white_btn"
            android:foreground="@null"
            android:gravity="center"
            android:text="白色按钮"
            android:textColor="@color/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="3.1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/gd1"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

    <com.sdsmdg.harjot.materialshadowsdemo.ShadowContainer
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_90"
        android:layout_weight="1"
        app:containerCornerRadius="@dimen/dp_18"
        app:containerDeltaLengthBottom="@dimen/dp_40"
        app:containerDeltaLengthLeft="@dimen/dp_16"
        app:containerDeltaLengthRight="@dimen/dp_24"
        app:containerShadowColor="#443774ff"
        app:containerShadowRadius="@dimen/dp_16"
        app:deltaY="@dimen/dp_6"
        app:enable="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn"
            android:padding="@dimen/dp_6"
            android:text="设置阴影颜色"
            android:textColor="#fff" />
    </com.sdsmdg.harjot.materialshadowsdemo.ShadowContainer>
</LinearLayout>